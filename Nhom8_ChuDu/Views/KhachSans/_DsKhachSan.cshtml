@model IEnumerable<Nhom8_ChuDu.Models.KhachSan>
<div class="container-item">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="item-khachsan">
                <a href="#">
                    <div class="product-img">
                        @{
                            string ImagePath = "~/Image/Khách sạn/" + item.Anh;
                        }
                        <img class="w-100" src="@Url.Content(ImagePath)" alt="">
                        <div class="detail-item">
                            <button class="btn-detail">XEM CHI TIẾT</button>
                        </div>
                    </div>
                    <p>@Html.DisplayFor(modelItem => item.Ten)</p>
                </a>
            </div>
        }
    </div>
</div>
