@model PagedList.IPagedList<Nhom8_ChuDu.Models.DatPhong>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Đặt phòng</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên phòng
        </th>
        <th>
            Email
        </th>
        <th>
            SDT
        </th>
        <th>
            Thời gian
        </th>
        <th>
            Số lượng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="height: 5rem; text-align: center">
            <td>
                @Html.DisplayFor(modelItem => item.PhongK.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThoiGian)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDDatPhong }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.IDDatPhong }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDDatPhong })
            </td>
        </tr>
    }

</table>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
